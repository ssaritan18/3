{
  "expo": {
    "name": "ADHDers Social Club",
    "slug": "adhders-social-club",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "adhders",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.adhders.socialclub",
      "infoPlist": {
        "NSCameraUsageDescription": "This app needs access to camera to take photos for chat messages.",
        "NSPhotoLibraryUsageDescription": "This app needs access to photo library to select images for chat messages.",
        "NSMicrophoneUsageDescription": "This app needs access to microphone for voice messages."
      }
    },
    "android": {
      "package": "com.adhders.socialclub",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#000"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "READ_MEDIA_IMAGES",
        "READ_MEDIA_VIDEO",
        "INTERNET",
        "ACCESS_NETWORK_STATE",
        "VIBRATE",
        "WAKE_LOCK"
      ],
      "versionCode": 2,
      "playStoreUrl": "https://play.google.com/store/apps/details?id=com.adhders.socialclub",
      "intentFilters": [
        {
          "action": "VIEW",
          "data": [
            {
              "scheme": "https",
              "host": "adhders-social-club.onrender.com"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ]
    },
    "web": {
      "bundler": "webpack",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#000"
        }
      ],
      [
        "react-native-google-mobile-ads",
        {
          "androidAppId": "ca-app-pub-3940256099942544~3347511713",
          "iosAppId": "ca-app-pub-3940256099942544~1458002511"
        }
      ],
      "expo-font",
      "expo-web-browser"
    ],
    "extra": {
      "admob": {
        "androidAppId": "ca-app-pub-3940256099942544~3347511713",
        "iosAppId": "ca-app-pub-3940256099942544~1458002511"
      },
      "backendUrl": "https://adhders-social-club.onrender.com"
    },
    "privacy": "public",
    "privacyPolicy": "https://adhders-social-club.onrender.com/privacy-policy",
    "termsOfService": "https://adhders-social-club.onrender.com/terms-of-service",
    "experiments": {
      "typedRoutes": true
    }
  }
}
